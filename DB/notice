
create table notice (
	board_no int default 0,														-- 게시글 번호 fk
    reply_no int default 0,														-- 댓글 번호 fk
    notice_no int auto_increment not null,										-- 알람 번호 pk
	memberid varchar(20),														-- 게시글을 쓴 사람의 id			
    another_memberid varchar(20),												-- 댓글을 작성한 사람의 id
	read_check char(2),															-- 읽음 확인
	regdate	datetime,															-- 알람생성일자
	primary key(notice_no),
    foreign key (board_no) references board(b_num),
    foreign key (reply_no) references reply(replynum)
)DEFAULT CHARSET=utf8 COLLATE utf8_general_ci;