create table members (
	memberid varchar(20) not null,					-- ȸ�� ���̵�
	nickname varchar(20) not null,					-- �г���
    password text not null,							-- ��й�ȣ
    membername varchar(30) not null,				-- ȸ���̸�
    email varchar(30) not null,						-- �̸���
    address varchar(100) not null,					-- �̸���
    phone varchar(13) not null,						-- ����ȣ
    flag  char(2)     not null,						-- ȸ�� ���
    mem_fileorigin varchar(50),						--  
    mem_filename varchar(50),						-- 서버저장이름
    mem_filedir varchar(50),						-- 경로
    primary key (memberid)
    )DEFAULT CHARSET=utf8 COLLATE utf8_general_ci; 
    
    
    회원가입 하면 기본 이미지 사진으로 저장....